<%- include('../partials/header'); %>

<section>
    <h2>Nouvelle plante</h2>
    <form action="/plant" method="POST">
        <div>
            <input type="text" name="name" required autofocus>
        </div>
        <div>
            <select name="species">
                <option>Choisir une esp√®ce</option>
                <% species.forEach(oneSpecies => { %>
                <option value="<%= oneSpecies.id %>"><%= oneSpecies.name %></option>
                <% }); %>
            </select>
        </div>
        <div>
            <input type="text" name="picture" placeholder="image">
        </div>
        <div>
            <textarea name="description" cols="30" rows="10" placeholder="Description"></textarea>
        </div>
        <div><button type="submit">Ajouter</button></div>
    </form>
</section>

<%- include('../partials/footer'); %>